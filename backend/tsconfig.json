{
    "$schema": "https://json.schemastore.org/tsconfig",
  
    "compilerOptions": {
      "lib": ["es2021"],
      "module": "commonjs",
      "target": "es2021",
  
      "rootDir": "src",
      "outDir": "out",
      "strict": true,
      "esModuleInterop": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
      "sourceMap": true
    }
  }